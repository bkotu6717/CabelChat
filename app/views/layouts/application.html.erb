<!DOCTYPE html>
<html>
  <head>
    <title>CabelChat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container">
  	<% if user_signed_in? %>
  		<li>
  			<%= link_to('Logout', destroy_user_session_path, :method => :delete , class: 'pull-right btn btn-primary') %>        
  		</li>
	<% end %>
    <%= yield %>
  </body>
</html>
